doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Admin Dashboard
    link(href='\
    https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.5.1/css/fontawesome.min.css\
    ', rel='stylesheet')
    link(href='\
    https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css\
    ', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css', integrity='sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==', crossorigin='anonymous', referrerpolicy='no-referrer')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        a.navbar-brand(href='#')
          img(src='/imgs/logo.svg', alt='', width='30', height='24')
        a.navbar-brand(href='#') Medical Zone
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
    .container.mt-4.d-flex.justify-content-center
      .row.row-cols-1.row-cols-md-4.g-4
        .col
          .card.h-100
            .card-body.d-flex.flex-column.justify-content-center.align-items-center
              i.fas.fa-question.mb-2
              a.btn.btn-primary(href='#') View Questions
        .col
          .card.h-100
            .card-body.d-flex.flex-column.justify-content-center.align-items-center
              i.fas.fa-list-alt.mb-2
              a.btn.btn-primary(href='#') View Question Sets
        .col
          .card.h-100
            .card-body.d-flex.flex-column.justify-content-center.align-items-center
              i.fas.fa-plus.mb-2
              a.btn.btn-primary(href='#') Add Question
    script(src='\
    https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js\
    ')
    script(src='\
    https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.5.1/js/fontawesome.min.js\
    ')