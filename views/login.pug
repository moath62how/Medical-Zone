extends Admin/_header.pug

block content

        .container.mt-5
            .row.justify-content-center
                .col-md-6
                    .card
                        .card-header
                            h3 Login
                        .card-body
                            form
                                .mb-3
                                    label.form-label(for='username') Username
                                    input#username.form-control(type='text', aria-describedby='usernameHelp')
                                .mb-3
                                    label.form-label(for='password') Password
                                    input#password.form-control(type='password')
                                button.btn.btn-primary(type='submit') Login
                                a.btn.btn-primary.mx-1(href='/auth/google')
                                    i.me-2(class='fa-brands fa-google') 
                                    | Login with Google
        script(type='module' src='/js/login.js')