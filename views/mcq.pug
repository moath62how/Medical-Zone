    title Welcome to the quiz 
    
    body 
        #bg
        input#show-hide-icon.form-check-input(type='checkbox')
        label.fs-1.me-5.w-25(for='show-hide-icon')

        .d-flex.align-items-center.flex-column
        
            #question.border.border-primary-subtle.p-3.pb-4.m-5.text-center.fs-3.rounded-5(style = "background-color: rgba(255, 255, 255, 0.7)") 
                .spinner-border
                
            div.d-flex.flex-column.align-items-start.justify-content-start.w-100.answer-container
            
                div    
                    input(type="radio" name = "Answer" id = "answer1" disabled)
                    Label.answers.text-start.disabled.placeholder.fs-5.rounded-4(for="answer1" class="btn-radio") 
                        
                div        
                    input(type="radio" name = "Answer" id = "answer2" disabled)
                    Label.answers.text-start.disabled.placeholder.fs-5.rounded-4(for="answer2" class="btn-radio") 
                        
                div        
                    input(type="radio" name = "Answer" id = "answer3" disabled)
                    Label.answers.text-start.disabled.placeholder.fs-5.rounded-4(for="answer3" class="btn-radio")
                        
                div       
                    input(type="radio" name = "Answer" id = "answer4" disabled)
                    Label.answers.text-start.disabled.placeholder.fs-5.rounded-4(for="answer4" class="btn-radio")
                        
            img(src='/imgs/logo.svg' style='width: 200px; height: 200px' alt='')
            .d-flex.w-75.justify-content-around            
                button#back_btn.btn.btn-secondary.btn-lg.rounded-5
                    i.bi.bi-caret-left       
                    |Back
                button#next_btn.btn.btn-primary.btn-lg.rounded-5
                    |Next 
                    i.bi.bi-caret-right       

    script(type='module' src='/js/MCQLogic.js')
